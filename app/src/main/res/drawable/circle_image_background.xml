<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 테두리 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/white" /> <!-- 테두리 안쪽 색상 -->
            <stroke
                android:width="4dp"
                android:color="@color/main_blue" /> <!-- 테두리 두께, 색상 -->
        </shape>
    </item>

    <!-- 이미지 뷰 영역 -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
</layer-list>
