<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="323dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background"
    android:backgroundTint="@color/main_blue">

    <TextView
        android:id="@+id/dialog_information_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:text="연습문제 나가신다"
        android:textColor="@color/white"
        android:fontFamily="@font/bm_jua"/>
    
    <ImageView
        android:layout_width="206dp"
        android:layout_height="150dp"
        android:src="@drawable/dialog_duck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/dialog_information_content"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_information_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:text="퀴즈 주제 선택권이\n걸려있다. 맞추자!"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textAlignment="center"
        android:fontFamily="@font/bm_jua"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>