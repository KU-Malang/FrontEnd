<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="544dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/select_topic_dialog_background">

    <RadioGroup
        android:id="@+id/dialog_select_topic_radio_group"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="193dp"
        android:layout_marginEnd="65dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radio_culture"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/blue_check"
            android:layout_marginBottom="20dp"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radio_history"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/blue_check"
            android:layout_marginBottom="20dp"/>

        <RadioButton
            android:id="@+id/radio_current_event"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/blue_check"
            android:layout_marginBottom="20dp"/>

        <RadioButton
            android:id="@+id/radio_geography"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/blue_check"
            android:layout_marginBottom="20dp"/>

        <RadioButton
            android:id="@+id/radio_computer"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/blue_check"
            android:layout_marginBottom="20dp"/>

        <RadioButton
            android:id="@+id/radio_common"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:button="@drawable/blue_check"
            android:layout_marginBottom="20dp"/>

    </RadioGroup>

    <Button
        android:id="@+id/dialog_select_topic_btn"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:background="@drawable/blue_button"
        android:text="선택하기"
        android:textColor="@color/white"
        android:fontFamily="@font/noto_sans_kr_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>