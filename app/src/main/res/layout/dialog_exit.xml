<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="355dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_background"
    android:backgroundTint="@color/main_blue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:text="진짜 나갈거야? 진짜?"
        android:textColor="@color/white"
        android:fontFamily="@font/bm_jua"/>

    <ImageView
        android:layout_width="206dp"
        android:layout_height="150dp"
        android:src="@drawable/dialog_duck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/dialog_exit_content"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="중간에 나가면\n점수가 팍팍 깎여!"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textAlignment="center"
        android:fontFamily="@font/bm_jua"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:id="@+id/dialog_exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="나가기"
        android:textSize="17dp"
        android:textColor="@color/main_orange"
        android:fontFamily="@font/noto_sans_kr_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>